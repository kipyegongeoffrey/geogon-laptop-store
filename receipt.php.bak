<?php
session_start();
if (!isset($_SESSION['last_order_id'])) {
    echo "No receipt available.";
    exit();
}

$order_id = $_SESSION['last_order_id'];
$conn = new mysqli("localhost", "root", "", "geogon_store");

// Fetch order
$order = $conn->query("SELECT * FROM orders WHERE id = $order_id")->fetch_assoc();

// Fetch order items
$items = $conn->query("SELECT * FROM order_items WHERE order_id = $order_id");
?>

<!DOCTYPE html>
<html>
<head>
    <title>Order Receipt ‚Äì Geogon Store</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 30px; background: #f5f5f5; }
        .receipt {
            background: white; padding: 20px; max-width: 800px;
            margin: auto; border-radius: 5px; box-shadow: 0 0 10px #ccc;
        }
        h2 { color: #004080; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { padding: 10px; border: 1px solid #ddd; text-align: left; }
        th { background: #004080; color: white; }
        .total { text-align: right; font-weight: bold; }
        .btn { margin-top: 20px; display: inline-block; background: #004080; color: white; padding: 10px 15px; text-decoration: none; border-radius: 4px; }
    </style>
</head>
<body>

<div class="receipt">
    <h2>üßæ Order Receipt</h2>
    <p><strong>Order ID:</strong> <?= $order['id'] ?></p>
    <p><strong>Name:</strong> <?= htmlspecialchars($order['name']) ?></p>
    <p><strong>Phone:</strong> <?= htmlspecialchars($order['phone']) ?></p>
    <p><strong>Location:</strong> <?= htmlspecialchars($order['location']) ?></p>
    <p><strong>Date:</strong> <?= $order['created_at'] ?></p>

    <table>
        <tr>
            <th>Product</th>
            <th>Price (KES)</th>
            <th>Qty</th>
            <th>Subtotal</th>
        </tr>
        <?php $total = 0; ?>
        <?php while ($item = $items->fetch_assoc()): ?>
            <?php $subtotal = $item['price'] * $item['quantity']; ?>
            <?php $total += $subtotal; ?>
            <tr>
                <td><?= htmlspecialchars($item['name']) ?></td>
                <td><?= number_format($item['price']) ?></td>
                <td><?= $item['quantity'] ?></td>
                <td><?= number_format($subtotal) ?></td>
            </tr>
        <?php endwhile; ?>
        <tr>
            <td colspan="3" class="total">TOTAL:</td>
            <td><strong>KES <?= number_format($total) ?></strong></td>
        </tr>
    </table>

    <a href="#" onclick="window.print()" class="btn">üñ®Ô∏è Print / Save as PDF</a>
    <a href="products.php" class="btn">‚Üê Continue Shopping</a>
</div>

</body>
</html>